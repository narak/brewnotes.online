:import {
    black: #360625;
    magenta: #bbaac7;
    darkpink: #862662;
    white: #fff7f3;
    purple: #6785b7;
    blue: #61a2ee;
    lightblue: #b1daf2;
    orange: #ca8e71;
    red: #be2349;
}

.base {
    cursor: pointer;
    transition: color 150ms;
}

.icon {
    padding: 0;
    margin: 0;
    background: none;
    border: none;
    color: magenta;
}

.icon:hover {
    color: lightblue;
}
